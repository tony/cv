{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "esModuleInterop": true,
    "module": "es2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["esnext.array", "es2019"],
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
