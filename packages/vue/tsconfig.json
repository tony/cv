    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "target": "es2015",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "webpack/*"]
}
