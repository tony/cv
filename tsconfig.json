{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["esnext.array", "es2019"],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "angular",
    "react",
    "vue"
  ]
}
